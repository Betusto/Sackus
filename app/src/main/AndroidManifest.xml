<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aplicacion.android.app.betusto.sackus">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" /> <!-- Revisar la conexion a internet -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".FirebaseOffline"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ViajesEditarActivity">
            android:windowSoftInputMode="adjustResize"
        </activity>
        <activity android:name=".ViajesVerActivity" />
        <activity android:name=".IngresarActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".OlvidePassword" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainMenu" />
        <activity android:name=".UsuarioActivity" />
        <activity
            android:name=".ModificandoActivity"
            android:label="@string/title_activity_modificando"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddActivity"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".GastoActivity"
            android:label="@string/title_activity_gasto"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ViajesActivity"
            android:label="@string/title_activity_viajes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".NotasActivity"
            android:label="@string/title_activity_notas"
            android:theme="@style/AppTheme.NoActionBar" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name=".MailBoxActivity" />
    </application>

</manifest>