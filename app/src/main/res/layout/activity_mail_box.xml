<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/layoasdutsf"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".MailBoxActivity"
android:background="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:id="@+id/activity_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/venice"
        android:visibility="gone"
        android:layout_marginStart="0dp">
    </RelativeLayout>


<RelativeLayout
    android:id="@+id/activity_mailbox_banner"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginBottom="20dp"
    android:gravity="center"
    android:background="@color/colorHolo"
    >

    <TextView
        android:id="@+id/tituloHistorial"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/mensajes_may"
        android:textColor="@color/common_google_signin_btn_text_dark_default"
        android:textSize="25dp" />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_mailbox_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        tools:listitem="@android:layout/simple_list_item_1"
        ></android.support.v7.widget.RecyclerView>

    <ImageButton
        android:id="@+id/activity_mail_box_nowifibutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circleshape"
        android:gravity="left"
        android:visibility="gone"
        app:srcCompat="@mipmap/ic_nowifi" />

    <include layout="@layout/recycler_invitaciones" />

</RelativeLayout>