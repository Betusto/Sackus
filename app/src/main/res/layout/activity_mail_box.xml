<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/layoasdutsf"
android:layout_width="match_parent"
android:layout_height="wrap_content"
tools:context=".MailBoxActivity"
android:background="?android:attr/selectableItemBackground"
    >
    <RelativeLayout
        android:id="@+id/activity_fondo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/venice"
        android:visibility="gone"
        android:layout_marginStart="0dp">
    </RelativeLayout>


<RelativeLayout
    android:id="@+id/activity_mailbox_banner"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp">
    </RelativeLayout>
    <ImageButton
        android:id="@+id/activity_mail_box_nowifibutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circleshape"
        android:gravity="left"
        android:visibility="gone"
        app:srcCompat="@mipmap/ic_nowifi" />

<RelativeLayout
    android:id="@+id/porfa4"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/activity_mailbox_lista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:listitem="@android:layout/simple_list_item_1"
        ></android.support.v7.widget.RecyclerView>

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="479dp"
        android:text="CheckBox"
        android:visibility="gone" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/nombreviaje_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="3dp"
            android:maxLines="3"
            android:textColor="@color/Verde"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/mensaje_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="3dp"
            android:maxLines="4"
            android:textColor="@color/colorIcons"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fecha_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:textColor="@color/colorIcons"
            android:textSize="13sp" />



        <TextView
            android:id="@+id/enviadopor_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="20"
            android:layout_margin="4dp"
            android:layout_marginBottom="3dp"
            android:maxLines="1"
            android:ellipsize="end"

            android:textColor="@color/colorIcons"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp" />

        <LinearLayout
            android:id="@+id/activity_mailbox_linea"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryText"
            android:orientation="horizontal" />

    </LinearLayout>
</RelativeLayout>



</RelativeLayout>