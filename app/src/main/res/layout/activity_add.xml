<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddActivity">

    <TextView
        android:id="@+id/activity_add_indicacion_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="252dp"
        android:text="AÃ±adir Efectivo"
        android:textAlignment="center"
        android:textSize="33sp" />

    <TextView
        android:id="@+id/activity_add_efectivo_total_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:text="Efectivo Total:\n"
        android:textAlignment="center"
        android:textSize="33sp" />

    <EditText
        android:id="@+id/activity_add_monto_edittext"
        android:layout_width="278dp"
        android:layout_height="52dp"
        android:layout_below="@+id/activity_add_indicacion_textview"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:textSize="30sp" />

    <ImageButton
        android:id="@+id/activity_add_agregar_button"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_below="@+id/activity_add_monto_edittext"
        android:layout_centerHorizontal="true"
        android:background="@drawable/circleshape"
        android:scaleType="fitXY"
        app:srcCompat="@mipmap/ic_add" />
    <ImageButton
        android:id="@+id/activity_add_nowifibutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/circleshape"
        app:srcCompat="@mipmap/ic_nowifi" />

</RelativeLayout>