<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/porfa4"
    android:layout_width="match_parent"
    android:layout_height="118dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp">

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/section_label"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="479dp"
        android:text="CheckBox"
        android:visibility="gone" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/viaje_image"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="4dp"
                android:background="@drawable/circleshape"
                android:scaleType="fitXY"
                app:srcCompat="@mipmap/ic_share"
                android:visibility="gone"
                />

            <TextView
                android:id="@+id/viaje_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:layout_marginBottom="3dp"
                android:maxLines="3"
                android:textColor="@color/Verde"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dinerodedicado_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:layout_marginBottom="3dp"
            android:maxLines="4"
            android:textColor="@color/colorIcons"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/fechainicio_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:textColor="@color/colorIcons"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/fecharegreso_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"
            android:textColor="@color/colorIcons"
            android:textSize="13sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp" />

        <LinearLayout
            android:id="@+id/activity_viajes_linea"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="3dp"
            android:background="@color/colorPrimaryText"
            android:orientation="horizontal" />

    </LinearLayout>
</RelativeLayout>

